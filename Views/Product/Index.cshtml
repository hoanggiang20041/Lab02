@model IEnumerable<Lab0002.Models.Product>

<h2>Các sản phẩm</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ảnh SP</th>
            <th>Tên SP</th>
            <th>Giá SP</th>
            <th>Mô Tả</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <p>No Image</p>
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Description</td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id">Xem chi tiết</a> |
                    <a asp-action="Update" asp-route-id="@product.Id">Sửa SP</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Xóa SP</a>
                </td>
            </tr>
        }
    </tbody>
</table>